{% extends 'base.html.twig' %}

{% block title %}
  Cinema
{% endblock %}

{% block body %}
  <h1>Cinema</h1>
  <hr />

  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-xs-1">
    {% for event in events %}
      <div>
        <div class="card" style="width: 18rem;">
          <img src="{{ event.image }}" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title">{{ event.name }}</h5>
            <p class="card-text">{{ event.description }}</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">When: {{ event.date }}</li>
            <li class="list-group-item">
              <i class="fa-solid fa-people-group"></i>{{ event.capacity }}
            </li>
            <li class="list-group-item">Category: {{ event.type }}</li>
          </ul>
          <div class="card-body">
            <a class="btn btn-primary" href="{{ path('app_event_show', { id: event.id }) }}">Details</a>
            <a class="btn btn-warning" href="{{ path('app_event_edit', { id: event.id }) }}">Edit</a>
            <a class="btn btn-danger" href="{{ path('app_event_delete', { id: event.id }) }}">Delete</a>
          </div>
        </div>
      </div>
    {% else %}
      <p>No Events Found</p>
    {% endfor %}
  </div>
{% endblock %}
