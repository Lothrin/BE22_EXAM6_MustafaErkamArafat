{% extends 'base.html.twig' %}

{% block title %}
  {{ event.name }}
{% endblock %}

{% block body %}
  <div class="container">
    <div class="card">
      <img src="{{ event.image }}" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title">{{ event.name }}</h5>
        <p class="card-text">{{ event.description }}</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">When: {{ event.date }}</li>
        <li class="list-group-item">
          <i class="fa-solid fa-people-group mx-2"></i>{{ event.capacity }}
        </li>
        <li class="list-group-item">Category: {{ event.type }}</li>
      </ul>
      <h4 class="ms-3 my-2">Contact</h4>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Telefon: {{ event.phoneNumber }}</li>
        <li class="list-group-item">Email: {{ event.email }}</li>
        <li class="list-group-item">Address: {{ event.address }}</li>
      </ul>
      <div class="card-body d-flex">
        <a class="btn btn-sm btn-warning mx-2" href="{{ path('app_event_edit', { id: event.id }) }}">Edit</a>
        <form class="" method="post" action="{{ path('app_event_delete', { id: event.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
          <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}" />
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
